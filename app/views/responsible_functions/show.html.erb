<%  if current_user.role_id == User.ADMINISTRATOR  || current_user.role_id == User.EDITOR %>
<div class="col-sm-8 offset-sm-2">
  <div class="card card-margin mt-4">
    <div class="card-header">
      <h5 class="card-title">
        Datos del rol responsable
      </h5>
    </div>

    <div class="card-body">
      <div class="table-responsive">
        <table class="table center-aligned-table table-striped">


          <tr>
            <th><strong>Nombre:</strong></th>
            <td class="td-white"><%= @responsible_function.name %></td>
          </tr>

          <tr>
            <th><strong>Description:</strong></th>
            <td class="td-white"> <%= @responsible_function.description %></td>
          </tr>

          <tr>
            <th><strong>Estado:</strong></th>
            <td class="td-white">
              <% if  @responsible_function.enable %>
                Habilitado
              <% else %>
                Deshabilitado
              <% end %>
            </td>
          </tr>


        </table>
      </div>
    </div>

    <div class="card-footer bg-white text-center">

      <%= link_to 'Editar', edit_responsible_function_path(@responsible_function) ,class: "btn btn-primary mr-2" %>
      <%= link_to 'Regresar', responsible_functions_path, class: "btn btn-light "  %>

    </div>
  </div>
</div>
<% else %>
  <% route = "responsible_functions" %>
  <%= render "layouts/views_partials/not_found", route: route %>
<% end %>

