<div class="row">
  <div class="offset-sm-1 col-sm-10">
    <div class="card card-margin">

      <div class="card-header">
        <h5 class="card-title">
          Datos
        </h5>
      </div>

      <%= bootstrap_form_with(model: responsible_function, local: true,html: { class: "forms-sample needs-validation", novalidate: true}) do |form| %>
        <div class="card-body">
          <% if responsible_function.errors.any? %>
            <div id="error_explanation" style="display: none">
              <h2><%= pluralize(responsible_function.errors.count, "error") %> prohibited this responsible_function from being saved:</h2>

              <ul>
                <% responsible_function.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>


          <div class="row no-gutters">
            <div class="<%= @responsible_function.id? ? "col-lg-10":"col-lg-12" %>">
              <div class="form-group">
                <%= form.text_field :name, label: t('responsible_function.name') ,class: "form-control", required: true%>
              </div>
            </div>

            <div class="col-lg-12">
              <div class="form-group">
                <%= form.text_area :description, label: t('responsible_function.description'), class:"form-control" %>
              </div>
            </div>

            <% if @responsible_function.id? %>
              <div class="col-lg-2 text-center">
                <div class="form-group">
                  <%= form.label :enable, "Estado" %> <br>
                  <label class="switch">
                    <input type="checkbox" name="enable" id="enable" value="true" <%= @responsible_function.enable ? "checked='checked'":""%> >
                    <span class="slider round"></span>
                  </label>
                </div>

              </div>
            <% end %>
          </div>


        </div>

        <div class="card-footer bg-white">
          <button type="submit" class="btn btn-primary mr-2 btn-action">Guardar</button>
          <%= link_to 'Regresar', responsible_functions_path ,class: "btn btn-light btn-action"  %>

          <%# if @delete_ok == nil %>
          <%#= link_to 'Eliminar', responsible_function, method: :delete, data: { confirm: 'Â¿Esta seguro que desea eliminarlo?' } %>
          <%# end %>

        </div>
      <% end %>

    </div>
  </div>
</div>










