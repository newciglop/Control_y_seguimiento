<%  if current_user.role_id == User.ADMINISTRATOR  || current_user.role_id == User.EDITOR %>
<div class="row">
  <div class="col-md-10 offset-md-1  text-center">
     <h2 class="my-4">Empleados</h2>
  </div>
  <div class="col-md-4 offset-md-1 text-left">
    <form>
      <div class="form-group">
        <label><%= t('action.search') %></label>
        <input name="search" placeholder="<%= t('workers.first_name') %>" value="<%=@search%>" class="form-control"/>
      </div>
      <div class="form-group">
        <input type="submit" value="<%= t('action.search') %>" class="btn btn-primary my-2"/>
      </div>
    </form>
  </div>
</div>
<div class="row">
  <div class="col-sm-10 offset-sm-1  text-center">
    <div class="table-responsive">
      <table class="table table-striped">
        <thead>
        <tr class="text-center">
          <th scope="col">Nombres</th>
          <th scope="col">Telefono</th>
          <th scope="col">Identificación</th>
          <th scope="col">Estado</th>
          <th colspan="2"></th>
        </tr>
        </thead>

        <tbody>
        <% @workers.each do |worker| %>
          <tr class="text-center">
            <td><%= worker.full_name %> </td>
            <td><%= worker.phone %></td>
            <td><%= worker.identification %></td>
            <td>
              <% if  worker.enable %>
                Habilitado
              <% else %>
                Deshabilitado
              <% end %>

            </td>
            <td class="text-center">
              <% if current_user.role_id == User.ADMINISTRATOR || current_user.role_id == User.EDITOR %>
              <%= link_to worker_path(worker) do %>
                <%= @show_eye %>
                  <% end %>

              <%= link_to edit_worker_path(worker) do %>
                <%= @show_edit %>
                <% end %>


              <% end %>


              <% if current_user.role_id == User.ADMINISTRATOR %>
                   <%= link_to worker, method: :delete, data: { confirm: '¿Esta seguro que desea eliminarlo?' }  do %>
                <%= @show_trash %>
                <% end %>
              <% end %>
            </td>

          </tr>
        <% end %>
        </tbody>
      </table>

      <br>
    </div>

    <div class="will_paginate">
      <%= will_paginate(@workers, :renderer => WillPaginate::ActionView::LinkRenderer) %>
    </div>

  </div>
</div>
<div class="row no-gutters justify-content-center mb-5">
  <div class="col-lg-10 offset-lg-1 d-flex justify-content-center">
    <%= link_to 'Nuevo Empleado', new_worker_path , class: "btn btn-primary mr-2" %>
  </div>
</div>
<%= render "layouts/views_partials/button" %>
<% else %>
  <% route = "workers" %>
  <%= render "layouts/views_partials/not_found", route: route %>
<% end %>