<div class="row">
  <div class="col-md-10 offset-md-1  text-center">
     <h2 class="my-4">Empleados</h2>
  </div>
  <div class="col-md-4 offset-md-1 text-left">
    <form>
      <div class="form-group">
        <label><%= t('action.search') %></label>
        <input name="fullname" placeholder="<%= t('workers.first_name') %>" value="<%=@search%>" class="form-control"/>
      </div>
      <div class="form-group">
        <input type="submit" value="<%= t('action.search') %>" class="btn btn-primary my-2"/>
      </div>
    </form>
  </div>
</div>



<div class="row">
  <div class="col-sm-10 offset-sm-1  text-center">
    <div class="table-responsive">
      <table class="table table-striped">
        <thead>
        <tr>
          <th scope="col">Nombres</th>
          <th scope="col">Telefono</th>
          <th scope="col">Identificación</th>
          <th scope="col">Estado</th>
          <th colspan="2"></th>
        </tr>
        </thead>

        <tbody>
        <% @workers.each do |worker| %>
          <tr>
            <td><%= worker.full_name %> </td>
            <td><%= worker.phone %></td>
            <td><%= worker.identification %></td>
            <td>
              <% if  worker.enable %>
                Habilitado
              <% else %>
                Deshabilitado
              <% end %>

            </td>
            <td>
              <%= link_to 'Mostrar', worker_path(worker) %>
            </td>
            <td><%= link_to 'Editar', edit_worker_path(worker) %></td>
            <td>
              <%# if profile.editable   %>
              <%= link_to 'Eliminar', worker, method: :delete, data: { confirm: '¿Esta seguro que desea eliminarlo?' } %></td>
            <%# end %>
          </tr>
        <% end %>
        </tbody>
      </table>

      <br>
    </div>
  </div>
</div>
<div class="row no-gutters justify-content-center mb-5">
  <div class="col-lg-10 offset-lg-1 d-flex justify-content-center">
    <%= link_to 'Nuevo Empleado', new_worker_path , class: "btn btn-primary mr-2" %>
  </div>



</div>