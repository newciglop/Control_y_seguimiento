<div class="row">
  <div class="offset-sm-2 col-sm-8">
    <div class="card card-margin">

      <div class="card-header">
        <h5 class="card-title">
          Datos
        </h5>
      </div>

      <%= bootstrap_form_with(model: theme, local: true,html: { class: "forms-sample needs-validation", novalidate: true }) do |form| %>
        <div class="card-body">
          <% if theme.errors.any? %>
            <div id="error_explanation" style="display: none">
              <h2><%= pluralize(theme.errors.count, "error") %> prohibited this theme from being saved:</h2>

              <ul>
                <% theme.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>


          <div class="row no-gutters">
            <div class="<%= @theme.id? ? "col-lg-10":"col-lg-12" %>">
              <div class="form-group">
                <%= form.text_field :name , label: t('theme.name'), class: "form-control", required: true %>
              </div>
            </div>

            <% if @theme.id? %>
            <div class="col-lg-2 text-center">
              <div class="form-group">
                  <%= form.label :enable, "Estado" %> <br>
                  <label class="switch">
                    <input type="checkbox" name="enable" id="enable" value="true" <%= @theme.enable ? "checked='checked'":""%> >
                    <span class="slider round"></span>
                  </label>
                </div>

            </div>
            <% end %>
          </div>

<!--
          <div class="form-group">
            <%#= form.text_field :annexed , label: t('theme.annexed') ,class: "form-control" %>
          </div>
-->
         




        </div>

        <div class="card-footer bg-white">
          <button type="submit" class="btn btn-primary mr-2 btn-action">Guardar</button>
          <%= link_to 'Regresar', themes_path ,class: "btn btn-light btn-action"  %>

          <%# if @delete_ok == nil %>
          <%#= link_to 'Eliminar', theme, method: :delete, data: { confirm: 'Â¿Esta seguro que desea eliminarlo?' } %>
          <%# end %>

        </div>
      <% end %>

    </div>
  </div>
</div>










