<%  if current_user.role_id == User.ADMINISTRATOR  || current_user.role_id == User.EDITOR %>
<div class="row">
  <div class="col-sm-8 offset-sm-2" style="padding-top: 30px">
    <nav>
      <div class="nav nav-tabs d-flex justify-content-center" id="nav-tab" role="tablist">
        <a class="nav-item nav-link active" id="nav-home-tab" data-toggle="tab" href="#nav-home" role="tab" aria-controls="nav-home" aria-selected="true">Datos Personales</a>
        <a class="nav-item nav-link" id="nav-profile-tab" data-toggle="tab" href="#nav-profile" role="tab" aria-controls="nav-profile" aria-selected="false">Datos Universidad</a>
        <a class="nav-item nav-link" id="nav-contact-tab" data-toggle="tab" href="#nav-contact" role="tab" aria-controls="nav-contact" aria-selected="false">Datos Empresas</a>
      </div>
    </nav>
    <div class="tab-content" id="nav-tabContent">
      <div class="tab-pane fade show active" id="nav-home" role="tabpanel" aria-labelledby="nav-home-tab">
        <div class="card card-margin">
          <div class="card-header">
            <h5 class="card-title mb-0" style="display: inline">
              Datos Personales
            </h5>
            <% route = "students" %>
            <%= render "layouts/views_partials/link_to_back_form_especial", route: route %>
          </div>

          <div class="card-body">
            <div class="table-responsive">
              <table class="table center-aligned-table table-striped">
            <tr>
                  <th style="background-color: <%= @student.states_student.color %>; color:white"><strong>Estado</strong></th>
                  <td style="background-color: <%= @student.states_student.color %>; color:white"><%= @student.states_student.name %></td>

            </tr>
                <tr>
                  <th><strong>Tipo de Identificación:</strong></th>
                  <td class="td-white"><%= @student.type_identification.name %></td>
                </tr>

                <tr>
                  <th><strong>No de Identificación:</strong></th>
                  <td class="td-white"><%= @student.identification %> </td>
                </tr>

                <tr>
                  <th><strong>Expedidad en :</strong></th>
                  <td class="td-white"><%= @student.issued_in %> </td>
                </tr>


                <tr>
                  <th><strong> Nombres:</strong></th>
                  <td class="td-white"><%= @student.name %></td>
                </tr>

                <tr>
                  <th><strong>Apellidos:</strong></th>
                  <td class="td-white"><%= @student.last_name%></td>
                </tr>

                <tr>
                  <th><strong>Fecha de nacimiento:</strong></th>
                  <td class="td-white"><%= @student.birthday %></td>
                </tr>

                <tr>
                  <th><strong>Edad:</strong></th>
                  <td class="td-white"><%= @student.age %></td>
                </tr>

                <tr>
                  <th><strong><%= t('students.location') %>:</strong></th>
                  <td class="td-white"><%= @student.city.state.name %></td>
                </tr>

                <tr>
                  <th><strong>Direccion:</strong></th>
                  <td class="td-white"><%= @student.address %></td>
                </tr>

                <tr>
                  <th><strong>telefono 1:</strong></th>
                  <td class="td-white"><%= @student.phone %></td>
                </tr>

                <tr>
                  <th><strong>telefono 2:</strong></th>
                  <td class="td-white"><%= @student.phone_2 %></td>
                </tr>


                <tr>
                  <th><strong>Correo Electronico 1:</strong></th>
                  <td class="td-white"><%= @student.mail %></td>
                </tr>

                <tr>
                  <th><strong>Correo Electronico 2:</strong></th>
                  <td class="td-white"><%= @student.mail_2 %></td>
                </tr>

                <tr>
                  <th><strong>Puntaje:</strong></th>
                  <td class="td-white"><%= @student.score %></td>
                </tr>

                <tr>
                  <th><strong>Comentario:</strong></th>
                  <td class="td-white"><%= @student.comment%></td>
                </tr>




              </table>
            </div>
          </div>

          <div class="card-footer bg-white text-center">

            <%= link_to 'Editar', edit_student_path(@student) ,class: "btn btn-primary mr-2" %>
            <%= link_to 'Regresar', students_path, class: "btn btn-light "  %>

          </div>

        </div>
      </div>
      <div class="tab-pane fade" id="nav-profile" role="tabpanel" aria-labelledby="nav-profile-tab">
        <div class="card card-margin">
          <div class="card-header">
            <h5 class="card-title mb-0">
              Datos Universidad
            </h5>
          </div>

          <div class="card-body">
            <div class="table-responsive">
              <table class="table center-aligned-table table-striped">


                <tr>
                  <th><strong>Convenio Vigente:</strong></th>
                  <td class="td-white"><%=  @student.university.agreement %>

                <tr>
                  <th><strong>Nombre:</strong></th>
                  <td class="td-white"><%= @student.university.name %> </td>
                </tr>

                <tr>
                  <th><strong>Titulacion del Estudiante:</strong></th>
                  <td class="td-white" style="padding-top:25px"><%= @student.title.name %> </td>
                </tr>


                <tr>
                  <th><strong> Semestre:</strong></th>
                  <td class="td-white"><%= @student.semester %></td>
                </tr>

                <tr>
                  <th><strong>Carrera:</strong></th>
                  <td class="td-white"><%= @student.career %></td>
                </tr>

                <tr>
                  <th><strong>Link de la carpeta de la universidad</strong></th>
                  <td class="td-white"><%= @student.link_university %></td>
                </tr>

                <tr>
                  <th><strong>Proceso con la universidad:</strong></th>
                  <td class="td-white"><%= @student.body_1 %></td>
                </tr>


              </table>
            </div>
          </div>

          <div class="card-footer bg-white text-center">

            <%= link_to 'Editar', edit_student_path(@student) ,class: "btn btn-primary mr-2" %>
            <%= link_to 'Regresar', students_path, class: "btn btn-light "  %>

          </div>

        </div>
      </div>
      <div class="tab-pane fade" id="nav-contact" role="tabpanel" aria-labelledby="nav-contact-tab">
        <div class="card card-margin">
          <div class="card-header">
            <h5 class="card-title mb-0">
              Datos Empresas
            </h5>
          </div>

          <div class="card-body">
            <div class="table-responsive">
              <table class="table center-aligned-table table-striped">


                <tr>
                  <th><strong>Encargado 1:</strong></th>
                  <td class="td-white"><%= @f_name %></td>
                </tr>

                <tr>
                  <th><strong>Encargado 2:</strong></th>
                  <td class="td-white"> <%= @f_name2 %></td>
                </tr>

                <tr>
                  <th><strong> Link de la carpeta de datos:</strong></th>
                  <td class="td-white"><%= @student.link_data %></td>
                </tr>

                <tr>
                  <th><strong>Funciones:</strong></th>
                  <td class="td-white"><%= @student.body_2 %></td>
                </tr>

                <tr>
                  <th><strong>Trabajador_actual:</strong></th>
                  <td class="td-white"><% if @student.current_worker %>
                    Si
                      <% else %>
                      No
                      <% end %>
                      </td>
                </tr>




              </table>
            </div>
          </div>

          <div class="card-footer bg-white text-center">

            <%= link_to 'Editar', edit_student_path(@student) ,class: "btn btn-primary mr-2" %>
            <%= link_to 'Regresar', students_path, class: "btn btn-light "  %>

          </div>

        </div>
      </div>
    </div>



  </div>
</div>
<% else %>

  <% route = "students" %>
  <%= render "layouts/views_partials/not_found", route: route %>
<% end %>
