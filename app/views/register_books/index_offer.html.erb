<% if current_user.role_id == User.ADMINISTRATOR %>
<div class="row">
  <div class="col-md-10 offset-md-1  text-center">
    <h2 class="my-4">Registro de acciones</h2>
  </div>
  <div class="offset-md-1"></div>
</div>

<div class="row">
  <div class="col-sm-8 offset-sm-2">
    <form class="forms-sample">
      <div class="form-row">
        <div class="col-sm-12 mb-4" id="index-admin_control">
          <div  style = "display: inline-block; width:25%">
            <%= select_tag "search", options_for_select(@months, @search), class: "form-control bg-input"%>
          </div>
          <div  style = "display: inline-block; width:30%">
            <input name="leader" placeholder="lider o Encargado" value="<%=@leader%>" class="form-control"/>
          </div>
          <div  style = "display: inline-block; width:30%">
            <input name="inputs" placeholder="Compañia o Propietario" value="<%=@inputs%>" class="form-control"/>
          </div>
          <div  style = "display: inline-block; width:10%">
            <button type="submit" value="<%= t("action.search")%>" class="btn btn-outline-primary btn-sm my-2">
              <i class="fas fa-search"></i>
            </button>
          </div>
        </div>
      </div>

    </form>
  </div>

</div>

<div class="row">
  <div class="col-sm-12">
    <div class="table-responsive">
      <table class="table table-striped">
        <thead>
        <tr>
          <th scope="col" class="text-center tr-register">codigo </th>
          <th scope="col" class="text-center tr-register">Id</th>
          <th scope="col" class="text-center tr-register">Modalidad</th>
          <th scope="col" class="text-center tr-register">Encargado</th>
          <th scope="col" class="text-center tr-register">Estado</th>
          <th scope="col" class="text-center tr-register">compañia</th>
          <th scope="col" class="text-center tr-register">Propietario</th>
          <th scope="col" class="text-center tr-register">Creado</th>
          <th scope="col" class="text-center tr-register">Actualizado por</th>
          <th scope="col" class="text-center tr-register">Actualizado</th>
          <th scope="col" class="text-center tr-register">Eliminado por</th>
          <th scope="col" class="text-center tr-register">Eliminado</th>
          <th scope="col" class="text-center tr-register">Hora de eliminacíon</th>




        </tr>
        </thead>

        <tbody>
        <% @register_books_offer.each do |register_books| %>
          <tr>
            <td class="text-center td-register"><%= register_books.code %> </td>
            <td class="text-center td-register"><%= register_books.code_sl %></td>
            <td class="text-center td-register"><%= register_books.modality_sl %></td>
            <td class="text-center td-register"><%= register_books.leader_sl %></td>
            <td class="text-center td-register"><%= register_books.status_sl %></td>
            <td class="text-center td-register"><%= register_books.company  %></td>
            <td class="text-center td-register"><%= register_books.create_user %></td>
            <td class="text-center td-register"><%= register_books.create_time %></td>
            <td class="text-center td-register"><%= register_books.update_user %></td>
            <td class="text-center td-register"><%= register_books.update_time %></td>
            <td class="text-center td-register"><%= register_books.destroy_user %></td>
            <td class="text-center td-register"><%= register_books.destroy_time %></td>
            <td class="text-center td-register">
              <%= register_books.time_destroy.to_a[2]%>: <%= register_books.time_destroy.to_a[1]%>: <%= register_books.time_destroy.to_a[0]%>
            </td>
          </tr>

        <% end %>
        </tbody>
      </table>

      <br>
    </div>
    <div class="will_paginate">
      <%= will_paginate(@register_books_offer, :renderer => WillPaginate::ActionView::LinkRenderer) %>
    </div>
  </div>
</div>

<%= render "layouts/views_partials/button" %>

<% else %>
  <% route = "register_offer" %>
  <%= render "layouts/views_partials/not_found", route: route %>
<% end %>

