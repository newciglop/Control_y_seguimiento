<div class="row">
  <div class="col-md-10 offset-md-1  text-center">
    <h2 class="my-4">Seguimientos licitaciones</h2>
  </div>
  <div class="offset-md-1"></div>
</div>

<div class="row">
  <div class="col-sm-8 offset-sm-2">
    <form class="forms-sample">
      <div class="form-row">
        <div class="col-sm-12 mb-1 text-center">
          <div style="width: 20%; display: inline-block">Mes</div>
          <div style="width: 35%; display: inline-block">Responsable</div>
          <div style="width: 35%; display: inline-block">Compañia</div>

        </div>
      </div>
      <div class="form-row">
        <div class="col-sm-12 mb-4" id="index-admin_control">
          <div  style = "display: inline-block; width:30%">
            <%= select_tag "search", options_for_select(@months, @search), class: "form-control bg-input"%>
          </div>
          <div style = "display: inline-block; width:30%">
              <input name="worker" placeholder="<%= t('workers.first_name') %>" value="<%=@worker%>" class="form-control"/>
          </div>
          <div style = "display: inline-block; width:30%">
            <input name="company" placeholder="<%= t('workers.first_name') %>" value="<%=@company%>" class="form-control"/>
          </div>
          <button type="submit" value="<%= t("action.search")%>" class="btn btn-outline-primary btn-sm my-2">
            <i class="fas fa-search"></i>
          </button>
        </div>
      </div>



    </form>
  </div>

</div>

<div class="row">
  <div class="offset-sm-1 col-sm-10">
    <div class="table-responsive">
      <table class="table table-striped">
        <thead>
        <tr>
          <th scope="col" class="text-center">#</th>
          <th scope="col" class="text-center"><%= t('offer.leader') %></th>
          <th scope="col" class="text-center"><%= t('offer.modality') %></th>
          <th scope="col" class="text-center"><%= t('offer.company') %></th>

          <th scope="col" class="text-center">Estado</th>
          <th scope="col" class="text-center">Fecha de publicación</th>
          <th></th>
        </tr>
        </thead>

        <tbody>
        <% @offers.each do |offer| %>


          <tr>
            <% if offer.status_acceptance_offers == "Si"  %>
              <td class="text-center bg-light-success"><%= offer.code %> </td>
            <% else %>
              <% if  (offer.date_acceptance_offers.to_date - Date.today) <= 0  %>
              <td class="text-center bg-light-danger"><%= offer.code %> </td>
                <% elsif (offer.date_acceptance_offers.to_date - Date.today) <= 7 %>
              <td class="text-center bg-light-warning"><%= offer.code %> </td>
                <% elsif (offer.date_acceptance_offers.to_date - Date.today) >= 8 %>
                <td class="text-center"><%= offer.code %> </td>
                <% end %>
            <% end %>
            <td class="text-center"><%= offer.worker.full_name %> </td>
            <td class="text-center"><%= offer.modality.name %>
            <td class="text-center"><%= offer.company.name %>
            <td class="text-center"><%= offer.status %></td>
            <td class="text-center"><%= show_date(offer.publication_date) %></td>

            <td>
              <%= link_to offer_path(offer) do %>
                <span class="btn btn-sm btn-outline-success"> <i class="far fa-eye"></i> </span>
              <% end %>
              <% if (offer.user.email == current_user.email) || (current_user.role_id == User.ADMINISTRATOR) || (current_user.role_id == User.EDITOR) %>
                 <%= link_to edit_offer_path(offer) do %>
                     <span class="btn btn-sm btn-outline-primary"> <i class="far fa-edit"></i> </span>
                 <% end %>
              <% end %>
              <% if (offer.user.email == current_user.email) || (current_user.role_id == User.ADMINISTRATOR) %>
                 <%= link_to offer, method: :delete, data: { confirm: '¿Esta seguro que desea eliminarlo?' } do %>
                    <span class="btn btn-sm btn-outline-danger">  <i class="fas fa-trash-alt"></i> </span>
                 <% end %>
             <% end %>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
      <%= will_paginate(@offers, :renderer => WillPaginate::ActionView::LinkRenderer) %>

      <br>
    </div>
  </div>
</div>
<div class="row justify-content-center">
  <div class="col-sm-12 d-flex justify-content-center">
    <%= link_to 'Nueva seguimiento', new_offer_path , class: "btn btn-primary mr-2" %>
  </div>



</div>
<%= render "layouts/views_partials/button" %>