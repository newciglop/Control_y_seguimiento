<div class="row">
  <div class="col-md-10 offset-md-1  text-center">
    <h2 class="my-4">Entidad</h2>
  </div>
</div>
<div class="row">
  <div class="col-md-4 offset-md-1 text-left">
    <form>
      <div class="form-group">
        <label><%= t('action.search') %></label>
        <input name="fullname" placeholder="<%= t('workers.first_name') %>" value="<%=@search%>" class="form-control"/>
      </div>
      <div class="form-group">
        <input type="submit" value="<%= t('action.search') %>" class="btn btn-primary my-2"/>
      </div>
    </form>
  </div>
</div>

<div class="row">
  <div class="col-md-10 offset-md-1">
    <div class="table-responsive">
      <table class="table table-striped">
        <thead>
        <tr>
          <th scope="col">Nombre</th>
          <th scope="col">Identificación</th>
          <th scope="col">Telefono</th>
        </tr>
        </thead>

        <tbody>
        <% @companies.each_with_index  do |company| %>

          <tr>
            <td><%= company.name %></td>
            <td><%= company.identification %></td>
            <td><%= company.phone %></td>
            <td><%= link_to 'Editar', edit_company_path(company) %></td>
            <td><%= link_to 'Mostrar', company_path(company) %></td>

            <td><%#= link_to 'Eliminar', company, method: :delete, data: { confirm: '¿Esta seguro que desea eliminarlo?' } %></td>
          </tr>
        <% end %>
        </tbody>
      </table>

      <br>
    </div>
  </div>
</div>
<div class="row justify-content-center">
  <div class="col-lg-10 offset-lg-1 d-flex justify-content-center">
    <%= link_to 'Nuevo Entidad', new_company_path , class: "btn btn-primary mr-2" %>
  </div>



</div>
