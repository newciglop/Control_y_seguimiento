              <%# end %>
            </select>
          </div> -->


        </div>

        <div class="card-footer bg-white">
          <button type="submit" class="btn btn-primary mr-2 btn-action">Guardar</button>
          <%= link_to 'Regresar', designations_path ,class: "btn btn-light btn-action"  %>



        </div>
      <% end %>

    </div>
  </div>
</div>

